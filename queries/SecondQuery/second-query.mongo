db.directors.aggregate([
  {
    "$lookup": {
      "from": "jobs",
      "localField": "_id",
      "foreignField": "crewMember.$id",
      "as": "jobs"
    }
  },
  {
    "$match": {
      "$and": [
        { "jobs.jobCategory": "director" },
        { "jobs.jobCategory": "actor" }
      ]
    }
  },
  {
    "$project": {
      "_id": false,
      "primaryName": true,
    }
  }
])