[
  {
    "$match": {
      "_id": "nm0721526"
    }
  },
  {
    "$lookup": {
      "from": "jobs",
      "localField": "_id",
      "foreignField": "crewMember._id",
      "as": "jobs"
    }
  },
  {
    "$lookup": {
      "from": "titles",
      "localField": "_id",
      "foreignField": "_id",
      "as": "title_info"
    }
  },
  {
    "$unwind": "$directors"
  },
  {
    "$match": {
      "directors._id": "nm0000288"
    }
  },
  {
    "$lookup": {
      "from": "crewMembers",
      "let": {
        "director_id": "$directors._id"
      },
      "pipeline": [
        {
          "$match": {
            "$expr": {
              "$eq": ["$_id", "$$director_id"]
            }
          }
        },
        {
          "$lookup": {
            "from": "titles",
            "localField": "knownForTitles.$id",
            "foreignField": "_id",
            "as": "knownForTitles"
          }
        },
        {
          "$lookup": {
            "from": "genres",
            "localField":
              "knownForTitles.genres.$id",
            "foreignField": "_id",
            "as": "knownForTitles.genres"
          }
        },
        {
          "$project": {
            "_id": 0,
            "name": "$primaryName",
            "birth_year": "$birthYear",
            "death_year": "$deathYear",
            "known_for": "$knownForTitles"
          }
        }
      ],
      "as": "director_info"
    }
  },
  {
    "$project": {
      "_id": 0,
      "director_info.known_for.genres._id": 0,
      "director_info.known_for.genres.__v": 0
    }
  }
]
